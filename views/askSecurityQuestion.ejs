<%- include("templates/header") %> 
    <h3 style=" text-align: center;">Answer your security question</h3>
    <form action='/verifySecurityQuestion' method='post' style="display: flex; flex-direction: column;">
        <label for="answer"><%= req.session.question %></label><br>
        <input name='answer' type='text' placeholder='Answer' class="p-2 mb-2">
        <button class="btn btn-primary" style=" color: #fff; padding: 10px;">Submit</button>
    </form>
        
    <!-- if errorVariable = true, display error message -->
    <% if (req.query.blank) { %>
        <p style="color: red;">Answer cannot be blank. Please try again.</p>
    <% } %>

    <% if (req.query.incorrect) { %>
        <p style="color: red;">Incorrect answer. Please try again.</p>
    <% } %>
<%- include("templates/footer") %> 
