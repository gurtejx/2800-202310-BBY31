<%- include("templates/header") %>

<body style="background-color: #191923;">
    <div class="alert mt-3" style="padding: 15px; width: 400px; margin: 0 auto; background-color: #191923;">
        <h3 style=" text-align: center; color: #fbfef9;">Enter your username</h3>
        <form action='/resetPassword' method='post' style="display: flex; flex-direction: column;">
            <!-- <label for="username">Enter your username:</label><br> -->
            <input name='username' type='text' placeholder='Username' class="p-2 mb-2">
            <button class="btn" style=" color: #fbfef9; padding: 10px; background-color: #a31621;">Submit</button>
            <br>
            <a href="/forgotUsername">Forgot username ?</a>
        </form>

        <!-- if errorVariable = true, display error message -->
        <% if (req.query.blank) { %>
        <p style="color: red;">Username cannot be blank. Please try again.</p>
        <% } %>

        <% if (req.query.invalid) { %>
        <p style="color: red;">Username cannot be blank. Please try again.</p>
        <% } %>

        <% if (req.query.incorrect) { %>
        <p style="color: red;">Username not in record. Sign up please.</p>
        <button class="btn btn-primary"><a href="/signUp" style="color: #fff; text-decoration: none;">Sign
                Up</a></button>
        <br>
        <% } %>
        <button class="btn mt-3" style="color: #fbfef9; background-color: #a31621;"><a href="/login"
                style="color: #fbfef9;">Back</a></button>
    </div>
</body>

<%- include("templates/footer") %>